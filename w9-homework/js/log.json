{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "projection": {"type": "albersUsa"},
  "layer": [
    {
      "data": {
        "graticule": {
          "extent": [[-125, 25], [-66, 50]],
          "step": [10, 10]
        }
      },
      "mark": {"type": "geoshape", "stroke": "#ccc"}
    },
    {
      "data": {
        "url": "../data/states-10m-cut.json",
        "format": {"type": "topojson", "feature": "states"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "../data/nba_stadiums.csv"},
      "transform": [
        {
          "lookup": "Team",
          "from": {
            "data": {"url": "../data/trade_counts.csv"},
            "key": "Team",
            "fields": ["TradeCount"]
          }
        }
      ],
      "mark": {"type": "circle", "color": "red"},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "TradeCount",
          "type": "quantitative",
          "scale": {"range": [50, 2000]} 
        },
        "tooltip": [
          {"field": "Team", "type": "nominal"},
          {"field": "TradeCount", "type": "quantitative"}
        ]
      }
    }
  ]
}
