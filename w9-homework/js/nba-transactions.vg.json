{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "NBA Trades Per Team by Year",
  "width": 800,
  "height": 500,
  "projection": {"type": "albersUsa"},
  "params": [
    {
      "name": "year",
      "value": 2025,
      "bind": {"input": "range", "min": 2010, "max": 2025, "step": 1}
    }
  ],
  "layer": [
    {
      "data": {
        "graticule": {
          "extent": [[-125, 25], [-66, 50]],
          "step": [10, 10]
        }
      },
      "mark": {"type": "geoshape", "stroke": "#ccc"}
    },
    {
      "data": {
        "url": "w9-homework/data/states-10m-cut.json",
        "format": {"type": "topojson", "feature": "states"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "w9-homework/data/trade_counts_per_year.csv"},
      "transform": [
        {
          "lookup": "Team",
          "from": {
            "data": {"url": "w9-homework/data/nba_stadiums.csv"},
            "key": "Team",
            "fields": ["Lat", "Long"]
          }
        },
        {"filter": "datum.Year == year"}
      ],
      "mark": {"type": "circle", "color": "#d95f0e"},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "TradeCount",
          "type": "quantitative",
          "scale": {"range": [50, 1000]},
          "legend": {"title": "Trade count"}
        },
        "tooltip": [
          {"field": "Team", "type": "nominal"},
          {"field": "Year", "type": "quantitative"},
          {"field": "TradeCount", "type": "quantitative", "title": "Trade count"}
        ]
      }
    }
  ]
}
